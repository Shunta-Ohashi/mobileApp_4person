<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Routine">

    <Button
        android:id="@+id/SettingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定する"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <CheckBox
        android:id="@+id/Sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="睡眠"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dayRoutine"
        app:layout_constraintEnd_toStartOf="@id/sleepStart"/>

    <EditText
        android:id="@+id/sleepStart"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toEndOf="@+id/Sleep"
        app:layout_constraintTop_toTopOf="@id/Sleep"/>



    <CheckBox
        android:id="@+id/breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朝食"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sleep"/>

    <EditText
        android:id="@+id/breakfastStart"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toEndOf="@id/breakfast"
        app:layout_constraintTop_toTopOf="@id/breakfast"/>

    <CheckBox
        android:id="@+id/lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昼食"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/breakfast" />

    <EditText
        android:id="@+id/lunchStart"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toEndOf="@id/lunch"
        app:layout_constraintTop_toTopOf="@id/lunch"/>

    <CheckBox
        android:id="@+id/dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夕食"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lunch" />

    <EditText
        android:id="@+id/dinnerStart"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toEndOf="@id/dinner"
        app:layout_constraintTop_toTopOf="@id/dinner"/>

    <CheckBox
        android:id="@+id/bath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="お風呂"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dinner" />

    <EditText
        android:id="@+id/bathStart"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toEndOf="@id/bath"
        app:layout_constraintTop_toTopOf="@id/bath"/>

    <CheckBox
        android:id="@+id/others1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="その他"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bath"/>

    <EditText
        android:id="@+id/others1Start"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintStart_toEndOf="@id/others1"
        app:layout_constraintTop_toTopOf="@id/others1"/>

    <TextView
        android:id="@+id/dayRoutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="習慣"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始時刻"
        app:layout_constraintTop_toBottomOf="@id/dayRoutine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView6"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="継続時間(分)"
        app:layout_constraintTop_toBottomOf="@id/dayRoutine"
        app:layout_constraintStart_toEndOf="@id/textView5"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>