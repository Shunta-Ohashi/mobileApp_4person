<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Routine">

    <Button
        android:id="@+id/SettingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="設定する"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/dayRoutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="習慣"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ラベル行 -->
    <TextView
        android:id="@+id/labelAction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="項目"
        android:layout_marginStart="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/dayRoutine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_weight="1.5"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="開始時刻"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/dayRoutine"
        app:layout_constraintStart_toEndOf="@id/labelAction"
        app:layout_constraintEnd_toStartOf="@id/textView6"
        app:layout_constraintHorizontal_weight="2"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="継続時間(分)"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/dayRoutine"
        app:layout_constraintStart_toEndOf="@id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>


    <!-- 睡眠 -->
    <CheckBox
        android:id="@+id/Sleep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="睡眠"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelAction"
        app:layout_constraintEnd_toStartOf="@+id/sleepStart"
        app:layout_constraintHorizontal_weight="1.5"/>

    <TextView
        android:id="@+id/sleepStart"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="HH:mm"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@+id/Sleep"
        app:layout_constraintTop_toTopOf="@id/Sleep"
        app:layout_constraintBottom_toBottomOf="@id/Sleep"
        app:layout_constraintEnd_toStartOf="@+id/sleepDuration"
        app:layout_constraintHorizontal_weight="2"/>


    <EditText
        android:id="@+id/sleepDuration"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:ems="5"
        android:hint="分"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/sleepStart"
        app:layout_constraintTop_toTopOf="@id/Sleep"
        app:layout_constraintBottom_toBottomOf="@id/Sleep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>


    <!-- 朝食 -->
    <CheckBox
        android:id="@+id/breakfast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="朝食"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sleep"
        app:layout_constraintEnd_toStartOf="@+id/breakfastStart"
        app:layout_constraintHorizontal_weight="1.5"/>

    <TextView
        android:id="@+id/breakfastStart"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="HH:mm"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@id/breakfast"
        app:layout_constraintTop_toTopOf="@id/breakfast"
        app:layout_constraintBottom_toBottomOf="@id/breakfast"
        app:layout_constraintEnd_toStartOf="@+id/breakfastDuration"
        app:layout_constraintHorizontal_weight="2"/>

    <EditText
        android:id="@+id/breakfastDuration"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:ems="5"
        android:hint="分"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/breakfastStart"
        app:layout_constraintTop_toTopOf="@id/breakfast"
        app:layout_constraintBottom_toBottomOf="@id/breakfast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>

    <!-- 昼食 -->
    <CheckBox
        android:id="@+id/lunch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="昼食"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/breakfast"
        app:layout_constraintEnd_toStartOf="@+id/lunchStart"
        app:layout_constraintHorizontal_weight="1.5"/>

    <TextView
        android:id="@+id/lunchStart"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="HH:mm"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@id/lunch"
        app:layout_constraintTop_toTopOf="@id/lunch"
        app:layout_constraintBottom_toBottomOf="@id/lunch"
        app:layout_constraintEnd_toStartOf="@+id/lunchDuration"
        app:layout_constraintHorizontal_weight="2"/>

    <EditText
        android:id="@+id/lunchDuration"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:ems="5"
        android:hint="分"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/lunchStart"
        app:layout_constraintTop_toTopOf="@id/lunch"
        app:layout_constraintBottom_toBottomOf="@id/lunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>

    <!-- 夕食 -->
    <CheckBox
        android:id="@+id/dinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="夕食"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lunch"
        app:layout_constraintEnd_toStartOf="@+id/dinnerStart"
        app:layout_constraintHorizontal_weight="1.5"/>

    <TextView
        android:id="@+id/dinnerStart"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="HH:mm"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@id/dinner"
        app:layout_constraintTop_toTopOf="@id/dinner"
        app:layout_constraintBottom_toBottomOf="@id/dinner"
        app:layout_constraintEnd_toStartOf="@+id/dinnerDuration"
        app:layout_constraintHorizontal_weight="2"/>

    <EditText
        android:id="@+id/dinnerDuration"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:ems="5"
        android:hint="分"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/dinnerStart"
        app:layout_constraintTop_toTopOf="@id/dinner"
        app:layout_constraintBottom_toBottomOf="@id/dinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>

    <!-- お風呂 -->
    <CheckBox
        android:id="@+id/bath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="お風呂"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dinner"
        app:layout_constraintEnd_toStartOf="@+id/bathStart"
        app:layout_constraintHorizontal_weight="1.5"/>

    <TextView
        android:id="@+id/bathStart"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="HH:mm"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@id/bath"
        app:layout_constraintTop_toTopOf="@id/bath"
        app:layout_constraintBottom_toBottomOf="@id/bath"
        app:layout_constraintEnd_toStartOf="@+id/bathDuration"
        app:layout_constraintHorizontal_weight="2"/>

    <EditText
        android:id="@+id/bathDuration"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:ems="5"
        android:hint="分"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/bathStart"
        app:layout_constraintTop_toTopOf="@id/bath"
        app:layout_constraintBottom_toBottomOf="@id/bath"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>

    <!-- その他 -->
    <CheckBox
        android:id="@+id/others1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="その他"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bath"
        app:layout_constraintEnd_toStartOf="@+id/others1Start"
        app:layout_constraintHorizontal_weight="1.5"/>

    <TextView
        android:id="@+id/others1Start"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="HH:mm"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@android:drawable/edit_text"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintStart_toEndOf="@id/others1"
        app:layout_constraintTop_toTopOf="@id/others1"
        app:layout_constraintBottom_toBottomOf="@id/others1"
        app:layout_constraintEnd_toStartOf="@+id/others1Duration"
        app:layout_constraintHorizontal_weight="2"/>

    <EditText
        android:id="@+id/others1Duration"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:ems="5"
        android:hint="分"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/others1Start"
        app:layout_constraintTop_toTopOf="@id/others1"
        app:layout_constraintBottom_toBottomOf="@id/others1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>
