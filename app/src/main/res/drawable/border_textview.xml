<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- 図形の形状を長方形に -->

    <!-- 枠線 -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <solid android:color="#FFFFFF" /> <!--  背景を白にする -->

    <corners android:radius="20dp" />   <!-- 角を少し丸くする -->

    <!-- TextView内のパディング (オプション) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />  <!-- テキストと枠線の間に余白を作る -->
</shape>
